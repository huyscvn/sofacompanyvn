<odoo>
    <data>
        <template id="report_advanced_quotation">

            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">

                    <div class="page" style="font-family:Open Sans, sans-serif;">
                        <head>
                            <link href="https://fonts.googleapis.com/css?family=Belleza&amp;display=swap"
                                  rel="stylesheet"/>
                        </head>
                        <style type="text/css">>
                            html *
                            {
                            font-family:Open Sans, sans-serif;
                            }
                            p {font-size: 14px;
                            line-height: 15px;
                            margin-bottom: 5px;
                            }

                        </style>
                        <table style="width: 100%;">
                            <tr>
                                <td style="width: 50%; text-align: left; font-size:70px;" rowspan="3" valign="top">
                                    <span style="font-family:Belleza, sans-serif;">QUOTATION</span>
                                </td>
                                <td style="width: 25%;">
                                    <br/>
                                    <b>QUOTATION NO.</b>
                                    <br/>
                                    <b>DATE.</b>
                                    <br/>
                                    <b>PREPARE BY</b>
                                </td>
                                <td style="width: 25%;">
                                    <br/>
                                    <span t-field="doc.display_name"/>
                                    <br/>
                                    <span t-field="doc.date_order" t-options-widget="&quot;date&quot;"/>
                                    <br/>
                                    <span t-field="doc.user_id.name"/>
                                </td>
                            </tr>
                        </table>
                        <table style="width: 100%;">
                            <tr style="font-size:15px;">
                                <th style="width: 25%;">QUOTATION FOR</th>
                                <th style="width: 25%;">SHIP TO</th>
                                <th style="width: 50%;">COMPANY INFO</th>
                            </tr>
                            <tr style="font-size:15px;">
                                <td style="width: 25%;">
                                    <span t-field="doc.partner_id.name"/>
                                    <br/>
                                    <span t-field="doc.partner_id.mobile"/>
                                    <br/>
                                    <span t-field="doc.partner_id.email"/>
                                </td>
                                <td style="width: 25%;">
                                    <span t-field="doc.partner_id.name"/>
                                    <br/>
                                    <span t-field="doc.partner_shipping_id.contact_address_complete"/>
                                </td>
                                <td style="width: 50%;">
                                    <span t-field="doc.partner_id.parent_id.name"/>
                                    <br/>
                                    <span t-field="doc.partner_id.parent_id.vat"/>
                                    <br/>
                                    <span t-field="doc.partner_id.parent_id.contact_address_complete"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right;font-size:14px;padding-top: 20px;" colspan="4">
                                    <em>*All prices are in VND &amp; included VAT</em>
                                </td>
                            </tr>
                        </table>
                        <table class="table">
                            <thead>
                                <tr style="height: 18px; font-size:14px; font-weight:bold">
                                    <td style="width: 40%; " colspan="2">DESCRIPTION</td>
                                    <td style="width: 15%;  " colspan="2">SPECS</td>
                                    <td style="width: 3%; ">QTY</td>
                                    <td style="width: 15%; ">PRICE</td>
                                    <td style="width: 8%; ">DISCOUNT</td>
                                    <td style="width: 17%;text-align:right">ITEM TOTAL</td>
                                </tr>
                            </thead>
                            <tbody t-foreach="doc.order_line" t-as="table_line">
                                <t t-if="table_line.product_template_id.is_delivery != True">
                                    <tr style="height: 5px;">
                                        <td style="width: 15%">
                                            <img t-attf-src="data:image/*;base64,{{table_line.product_template_id.image_128}}"
                                                 style="max-height:100%; max-width:100%;"/>
                                        </td>
                                        <td style="width: 25%">
                                            <t t-if="table_line.product_template_id.x_product_model_id.x_name">
                                                <b style=" font-size:13px;"
                                                   t-esc="table_line.product_template_id.x_product_model_id.x_name + ' - ' + table_line.product_template_id.name"/>
                                            </t>
                                            <t t-else="">
                                                <b style=" font-size:13px;"
                                                   t-esc="table_line.product_template_id.name"/>
                                            </t>
                                            <p>
                                                <t t-esc="table_line.product_template_id.x_product_function_id.x_name"/>
                                            </p>
                                            <p>
                                                <t t-esc="table_line.product_template_id.x_product_fabric_id.x_name"/>
                                            </p>
                                            <p>
                                                <t t-esc="table_line.product_template_id.x_product_legs_id.x_name"/>
                                            </p>
                                        </td>
                                        <td style="width: 2%;">
                                            <t t-if="table_line.product_template_id.x_package_width">
                                                <p>W</p>
                                            </t>
                                            <t t-if="table_line.product_template_id.x_package_depth">
                                                <p>D</p>
                                            </t>
                                            <t t-if="table_line.product_template_id.x_package_height">
                                                <p>H</p>
                                            </t>
                                        </td>
                                        <td style="width: 13%;">
                                            <t t-if="table_line.product_template_id.x_package_width">
                                                <p>
                                                    <t t-esc="table_line.product_template_id.x_package_width"/>
                                                    cm
                                                </p>
                                            </t>
                                            <t t-if="table_line.product_template_id.x_package_depth">
                                                <p>
                                                    <t t-esc="table_line.product_template_id.x_package_depth"/>
                                                    cm
                                                </p>
                                            </t>
                                            <t t-if="table_line.product_template_id.x_package_height">
                                                <p>
                                                    <t t-esc="table_line.product_template_id.x_package_height"/>
                                                    cm
                                                </p>
                                            </t>
                                        </td>
                                        <td style="width: 5%;">
                                            <p>
                                                <t t-esc="int(table_line.product_uom_qty)"/>
                                            </p>
                                        </td>
                                        <td style="width: 15%;">
                                            <p>
                                                <t t-esc="'{0:,.0f}'.format(int(table_line.price_unit * (1- table_line.discount/100)))"
                                                />
                                            </p>
                                            <t t-if="table_line.discount">
                                                <del style="font-size:11px;">
                                                    <t t-esc="'{0:,.0f}'.format(int(table_line.price_unit))"/>
                                                </del>
                                            </t>
                                        </td>
                                        <td style="width: 8%; ">
                                            <t t-if="table_line.discount">
                                                <p>
                                                    <t t-esc="table_line.discount"/>
                                                    %
                                                </p>
                                            </t>
                                            <t t-else="">
                                                <p>-</p>
                                            </t>
                                        </td>
                                        <td style="width: 17%;text-align:right">
                                            <p>
                                                <t t-esc="'{0:,.0f}'.format(int(table_line.price_subtotal))"/>
                                            </p>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <hr/>
                        <table style="width: 100%">
                            <tbody>
                                <tr style="font-size:16px">
                                    <td style="width: 50%; " colspan="2">
                                        <b>QUOTATION NOTE</b>
                                    </td>
                                    <td style="width: 25%;">
                                        <b>SUB-TOTAL</b>
                                    </td>
                                    <td style="width: 25%; text-align:right">
                                        <t t-esc="'{0:,.0f}'.format(float(doc.amount_total-doc.delivery_cost))"/>
                                    </td>
                                </tr>
                                <tr style="font-size:16px">
                                    <td style="width: 40%; text-align: left" rowspan="3">
                                        <t t-esc="doc.note"/>
                                    </td>
                                    <td style="width: 10%; "></td>
                                    <td style="width: 35%">
                                        <b>DELIVERY &amp; ASSEMBLING FEE</b>
                                    </td>
                                    <td style="width: 15%; text-align:right">
                                        <t t-esc="'{0:,.0f}'.format(float(doc.delivery_cost))"/>
                                    </td>
                                </tr>
                                <tr style="font-size:16px">
                                    <td style=" "></td>
                                    <td>
                                        <b>DISCOUNTED</b>
                                    </td>
                                    <td style="text-align:right">
                                        <t t-esc="'{0:,.0f}'.format(float(sum((m.price_unit * m.product_uom_qty * m.discount/100) for m in doc.order_line)))"/>
                                    </td>
                                </tr>
                                <tr style="">
                                    <td style=" "></td>
                                    <td>
                                        <b style="font-size:16px">GRAND TOTAL</b>
                                        <br/>
                                        <b style="font-size:50px">
                                            <t t-esc="'{0:,.0f}'.format(float(doc.amount_total))"/>
                                        </b>
                                    </td>
                                    <td style=""></td>
                                </tr>
                                <tr style="">
                                    <td style=";font-size: 11px;">
                                        <b><br/>*NOTICE
                                        </b>
                                    </td>
                                    <td style="width: 40.3833px; "></td>
                                    <td style="width: 378.617px; text-align: left;font-size: 50px" colspan="2">
                                    </td>
                                </tr>
                                <tr style="height: 1px;">
                                    <td style="font-size: 12px" rowspan="4">
                                        <em>Lead time for producing is 4 to 5 weeks after the deposit is received and
                                            confirmed.
                                        </em>
                                        <br/>
                                        <em>The DYO product(s) is NOT
                                            eligible to be returned with any conditions excepting problems from
                                            manufacturer.
                                        </em>
                                        <br/>
                                        <em>The warranty policy is applied with terms and conditions:
                                            Frame-5 years; Foam-3 years; Fabric-1year.
                                        </em>
                                        <br/>
                                        <em>VAT information for Red Invoice Request must be informed at
                                            least 1 day before delivery. After that, we may refuse to issue
                                            Red Invoice without any explainations.
                                        </em>
                                        <br/>
                                        <em>VAT information for Red Invoice Request must be informed at
                                            least 1 day before delivery. After that, we may refuse to issue
                                            Red Invoice without any explainations.
                                        </em>
                                        <br/>
                                    </td>
                                    <td style="width: 40.3833px; height: 1px;"></td>
                                    <td style="width: 35%; font-size:12px">
                                    </td>
                                    <td style="width: 141px; height: 1px;"></td>
                                </tr>
                                <tr style="height: 111px;">
                                    <td style="width: 40.3833px; height: 111px;"></td>
                                    <td style="width: 237.617px; height: 111px;" colspan="2" rowspan="2">
                                        <b>BANK ACCOUNT INFORMATION</b>
                                        <br/>
                                        Name: Cong Ty TNHH Sofacompany Viet Nam
                                        <br/>
                                        Number: 0381000416834 (VND)
                                        <br/>
                                        Bank: Vietcombank - Thu Duc branch

                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="footer">
                        <div style="text-align: center; padding-bottom: 10px;">
                            <img src="/advanced_invoice/static/img/logo.png" width="200" height="22" alt=""/>
                        </div>
                        <table style="width: 100%;height: 30px; background-color: black;font-size: 14px">
                            <tr>
                                <td style="width: 100%; text-align: center;">
                                    <b style="background-color: #000000; color: #ffffff;">Website: vn.sofacompany.com&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Hotline:
                                        1900 636 845&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Email:
                                        <a style="background-color: #000000; color: #ffffff;"
                                           href="mailto:info-vn@sofacompany.com">info-vn@sofacompany.com
                                        </a>
                                    </b>
                                </td>
                            </tr>
                            <tr>
                                <td style="width: 100%; text-align: center;">
                                    <b style="background-color: #000000; color: #ffffff;">Showroom: A1.00.09, Tower
                                        A1 Sarimi, 74 Nguyen Co Thach, Sala Residence, District 2, Ho Chi Minh City
                                    </b>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
